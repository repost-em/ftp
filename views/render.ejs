  <script>
    var datatables_params = {
			'paging'				: true,
			'searching'				: true,
			"lengthMenu"			: [[25, 50, 100, 500, 1000, 5000, 10000, -1], [25, 50, 100, 500, 1000, 5000, 10000, "All"]],

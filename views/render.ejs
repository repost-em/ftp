<div class="container-fluid" id="container-wrapper">
  <div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Data akun bank <%= akun.bank %> [<%= akun.username %>] </h1>
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="./">Home</a></li>
      <li class="breadcrumb-item active" aria-current="page">Charts</li>
    </ol>
  </div>
          
          
  <div class="row">
    <!-- Area Charts -->
    <div class="col-lg-12">
      <div class="card mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
          <h6 class="m-0 font-weight-bold text-primary">Detail Akun <%= username %></h6>
        </div>
        <div class="card-body">
          <form method="POST" action="/update-tgl">
        
            
              <div class="col-md-6">
                          <label for="date-end" class="control-label">To - end</label>
                          <div class="form-group" id="simple-date1">
                            <label for="oneYearView">Date Awal</label>
                              <div class="input-group date">
                                <div class="input-group-prepend">
                                  <span class="input-group-text"><i class="fas fa-calendar"></i></span>
                                </div>
                                <input type="text" name="date" class="form-control" value="<%= inputdate %>" id="simpleDataInput">
                              </div>
                              <input type="hidden" name="user" class="form-control" value="<%= akun.username %>">
                              <input type="hidden" name="link" class="form-control" value="<%= akun.link %>">
                              <label for="oneYearView">Date Akhir</label>
                              <div class="input-group date">
                                <div class="input-group-prepend">
                                  <span class="input-group-text"><i class="fas fa-calendar"></i></span>
                                </div>
                                <input type="text" name="date1" class="form-control" value="<%= inputdate %>" id="simpleDataInput">
                              </div>
                              
                          </div>
                          <div class="form-group">
                            <button type="submit" class="btn btn-success">
                              <i class="fa fa-repeat"></i> New Date
                            </button>
                            </div>
                        </div>
                      </div>
                    </form>
              <div class="table-responsive">
									<table class="table table-stripped table-condensed">
										<thead>
											<tr>
                        <th>Link Unik</th>
												<th>Bank</th>
												<th>Username</th>
												<th>Saldo</th>
												<th>Norek</th>
												<th>Last Login</th>
											</tr>
										</thead>
										<tbody>
											<tr>
                       <td><%= akun.link %></td>
                        <td><%= akun.bank %></td>
                        <td><%= akun.username %></td>
                        <td><%= akun.saldo %></td>
                        <td><%= akun.norek %></td>
                        <td><%= tanggal %> to <%= tanggal1 %></td>
                      </tr>
										</tbody>
									</table>
								</div>
                   
              </div>
          <!-- Row -->
          <!-- <div class="col-xl-6 col-lg-12 col-md-9"> -->
          
         
              <!-- Row -->
              <div class="row">
                <!-- Area Charts -->
                <div class="col-lg-12">
                  <div class="card mb-4">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                      <h6 class="m-0 font-weight-bold text-primary">Data Mutasi</h6>
                    </div>
                    <div class="card-body">
                  <div class="table-responsive">
                    <table class="table align-items-center table-bordered table-flush" id="dataTable">
                    <thead class="thead-light">
                      <tr>
                        <th>Tanggal</th>
                        <th>Keterangan</th>
                        <th>Nominal </th>
                        <th>Jenis</th>
                        <th>Saldo Akhir</th>
                      </tr>
                    </thead>
                    <tfoot>
                      <tr>
                        <th>Tanggal</th>
                        <th>Keterangan</th>
                        <th>Nominal </th>
                        <th>Jenis</th>
                        <th>Saldo Akhir</th>
                      </tr>
                    </tfoot>
                    <tbody>
                        <% for(var i=0; i < result.length; i++) { %>
                          <% if(result[i].mutasi == "DB"){ %> 
                            <tr class='table-danger'>
                              <td><%= result[i].tanggal %></td>
                              <td><%= result[i].keterangan %></td>
                              <td><%= result[i].nominal %></td>    
                              <td><%= result[i].mutasi %></td>   
                              <td><%= result[i].saldoakhir %></td>                                          
                              </tr>
                         <% }else{ %>
                          <tr class='table-info'>
                            <td><%= result[i].tanggal %></td>
                            <td><%= result[i].keterangan %></td>
                            <td><%= result[i].nominal %></td>    
                            <td><%= result[i].mutasi %></td>    
                            <td><%= result[i].saldoakhir %></td>    
                          <% } }%> 
                        </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
